<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/LinearLayout1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.besaba.anvarov.orenautoturn.MainActivity"
              tools:padding="8dp">

    <Switch
        android:id="@+id/swRotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="100dp"
        android:text="@string/txtSwitch"/>

    <Button
        android:id="@+id/btCloseView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="35dp"
        android:text="@string/txtCloseView"/>

    <Button
        android:id="@+id/btKillApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="115dp"
        android:text="@string/txtKillApp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/Copyr"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

</LinearLayout>
